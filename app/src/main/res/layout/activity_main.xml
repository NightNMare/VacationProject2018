<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dlarb.vacationproject2018.MainActivity">

    <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"/>-->

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_stopwatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스톱워치"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/main_stopwatch_record"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#e8e8e8" />

            <TextView
                android:id="@+id/TV_Map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구글맵"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/googlemap_mylocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#e8e8e8"
                android:gravity="center_vertical"
                android:padding="10dp"
                tools:text="asd" />
        </LinearLayout>

        <include layout="@layout/activity_main_drawer" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
